
<%- include('./../partials/header') %>
<div class="container clearfix">
  <div class="tile is-ancestor">
    <div class="tile">
      <% user.equipment.forEach((function (e){`<h3>e</h3>`})) %>
    </div>
  </div>
  <div class="tile is-ancestor">
    <% if (user.Coffee){ %>
    <% user.Coffee.forEach(function(c){ %>
      <article class="media">
        <figure class='media-left'>
          <p class ="level is-mobile"><%= c.name %></p>
        </figure>
        <div class="media-content">
          <p><%= c.roaster %></p>
        </div>
        <div class="media-right">
          <nav class="level is-mobile">
            <form action="/coffees/<%= c._id %>?_method=DELETE" method="POST" class="secondary-content">
              <button type="submit" name="delete">❌</button>
            </form>
        </nav>
        </div>
      </article>
    <% }); %>
    <% } %>
  </div>
  <div class="field is-grouped">
    <form id='update-user' action="/users/<%= user.id %>/update" method="PUT">
      <label class="label">What equipment do you have?</label>
        <div class="control">
          <input class="input" type='text' value="" name='equipment'>
          <p class="help">Seperate with comments</p>
        </div>
        <label class="checkbox">Are you a roaster?
          <input type="checkbox" name="" value="isRoaster">
        </label>
        <input type='submit' value='Update'>
      </form>
  </div>
</div>
<%- include('./../partials/footer') %>
